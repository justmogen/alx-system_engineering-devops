# Increases the amount of traffic Nginx server handles
# Increase the ULIMIT of the default f
exec { 'fix--nginx-server':
  command => 'sed -i "s/15/4096/" /etc/default/nginx',
  path    => '/usr/local/bin/:/bin/'
} ->

# Restart Nginx
exec { 'nginx-restart':
  command => 'nginx restart',
  path    => '/etc/init.d/'
}
